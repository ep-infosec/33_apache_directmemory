<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.apache.directmemory</groupId>
    <artifactId>directmemory-integrations</artifactId>
    <version>0.3-SNAPSHOT</version>
  </parent>

  <artifactId>directmemory-guava</artifactId>
  <name>Apache DirectMemory :: Integrations :: Guava</name>
  <packaging>bundle</packaging>
  <description>Provides second level cache implementation for Guava Cache</description>

  <properties>
    <osgi.import>
      org.apache.directmemory*;version="${project.version}",
      *
    </osgi.import>
    <osgi.export>
      org.apache.directmemory.guava;version="${project.version}";-noimport:=true,
    </osgi.export>
  </properties>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
          <argLine>-Xmx512m -Xms512m -XX:MaxDirectMemorySize=512m</argLine>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <!-- DirectMemory Dependency -->
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>directmemory-cache</artifactId>
    </dependency>
    <dependency>
      <groupId>com.google.guava</groupId>
      <artifactId>guava</artifactId>
      <version>14.0.1</version>
    </dependency>
    <dependency>
      <groupId>com.google.code.findbugs</groupId>
      <artifactId>jsr305</artifactId>
      <version>2.0.1</version>
      <scope>compile</scope>
    </dependency>

    <!-- Testing Dependencies -->
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-simple</artifactId>
    </dependency>
  </dependencies>

</project>
